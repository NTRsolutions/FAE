<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/My_Title_bg"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_Notification_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="10"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Notification_Date"
            android:textSize="19sp" />

        <Button
            android:id="@+id/angry_btn"
            android:text="New"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshape" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/btn_news_common_share" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_Notification_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Notification_Title_Red"

        android:textSize="26sp" />


</LinearLayout>