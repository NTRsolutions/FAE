<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/IssueList_Background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/My_Title_bg"
    android:orientation="horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/smail_corner"


        android:gravity="left|center_vertical"
        android:orientation="vertical"
        android:paddingBottom="14dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="14dp">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/My_Title_bg"
            android:gravity="left|top"
            android:orientation="horizontal"
            android:paddingTop="15dp">


            <TextView
                android:id="@+id/txt_Issue_Project_Name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:gravity="left|top"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/My_Title_Font" />

            <TextView
                android:id="@+id/txt_Issue_Date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@id/txt_Issue_Project_Name"
                android:background="@color/My_Title_bg"
                android:gravity="right|top"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/My_Content_Font_new"
                android:textSize="@dimen/text_size_medium" />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/My_Title_bg"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_Issue_Subject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:layout_toLeftOf="@+id/Rel_WorkNoteCount"
                android:background="@color/My_Title_bg"
                android:gravity="left|top"
                android:paddingBottom="20dp"
                android:scrollbars="vertical"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/My_Content_Font_new"
                android:textSize="28sp" />


            <RelativeLayout
                android:id="@+id/Rel_WorkNoteCount"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:background="@color/My_Title_bg"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_Issue_WorkNoteCount"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:background="@color/My_New_bg"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/My_New_Font"
                    android:textSize="@dimen/text_size_xsmall" />

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>
</LinearLayout>