<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/My_Title_bg"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/My_Title_bg"
        android:gravity="left|top"
        android:orientation="horizontal"
        android:paddingLeft="14dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/My_Title_bg"
            android:gravity="left|center_vertical"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical">


                <TextView
                    android:id="@+id/txt_MyHistory_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/Notification_Title_Red"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/txt_MyHistory_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:paddingRight="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/Notification_Date"
                    android:textSize="19sp" />
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:orientation="vertical"
        android:paddingLeft="14dp">

        <TextView
            android:id="@+id/txt_MyHistory_Content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:paddingTop="3dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Notification_Content"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/txt_MyHistory_Desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:paddingTop="3dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Notification_Content"
            android:textSize="26sp" />


    </LinearLayout>
</LinearLayout>